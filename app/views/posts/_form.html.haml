= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :free
    = f.check_box :free
  .field
    = f.label :athlete
    = f.check_box :athlete
  .field
    = f.label :advised
    = f.check_box :advised
  .actions
    = f.submit 'Save'
